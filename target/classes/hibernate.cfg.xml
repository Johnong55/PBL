<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/demo</property>
<property name="hibernate.connection.username">root</property>
<property name="hibernate.connection.password"></property>
<property name="hibernate.hbm2ddl.auto"> update</property> <!-- cap nhat nhung thong tin moi --> 
<property name="show_sql">true</property> <!-- hien thi caua len console -->
<!-- mapping -->
<mapping class = "model.Account"/>
<mapping class = "model.truonghoc"/>
<mapping class = "model.Class"/>
<mapping class= "model.Sv"/>
<mapping class = "model.Gv"/>
<mapping class = "model.Giangday"/>
<mapping class = "model.KiThi"/>
<mapping class = "model.DeThi"/>
<mapping class = "model.Nganhangcauhoi"/>

</session-factory>
</hibernate-configuration>
